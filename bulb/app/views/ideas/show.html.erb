<p id="notice"><%= notice %></p>

<%= link_to like_idea_path(@idea), method: :put do %>
  Vote | 
  <%= @idea.get_upvotes.size %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @idea.title %>
</p>
<p><strong>Company:</strong>
<%= @idea.user.company.try(:name) %>
</p>

<p>
  <strong>By:</strong>
  <%= @idea.user.name %>
</p>

<p>
  <strong>Blurb:</strong>
  <%= @idea.blurb %>
</p>



<p>
  <strong>Reason:</strong>
  <%= @idea.reason %>
</p>

<p>
  <strong>Goal:</strong>
  <%= @idea.goal %>
</p>

<p>
  <strong>Implementation:</strong>
  <%= @idea.implementation %>
</p>

<p>
  <strong>Budget:</strong>
  <%= @idea.budget %>
</p>

<%= render partial: 'comments/form', locals: { commentable: @idea } %>
<%= render partial: 'comments/comment', collection: @idea.comments, locals: { commentable: @idea } %>

<%= link_to 'Edit', edit_idea_path(@idea) %> 
<%= link_to 'Back', ideas_path %>
